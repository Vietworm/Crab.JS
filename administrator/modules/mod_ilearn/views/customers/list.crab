{% extends 'layout.crab' %}

{% block cssExtends %}
    {{ super() }}
{% endblock %}

{% block content_body %}
    {% for student in customers %}
        <tr>
            <td><input type="checkbox" class="check-element" name="ids[]" value="{{ student._id }}" title="Customer">
            </td>
            <td>
                <a href="/{{ admin_prefix }}/ilearn/customers/view/{{ student._id }}">{{ student.display_name }}</a>

                <span class="label label-danger">{{ student.parent_name }}</span>
            </td>
            <td>
                {% if student.gender == 'MALE' %}
                    <span class="label label-primary">Nam</span>
                    {% elif student.gender == 'FEMALE' %}
                    <span class="label label-warning">Nữ</span>
                {% else %}
                    <span class="label label-danger">Chờ cập nhật</span>
                {% endif %}
            </td>
            <td>
                <span class="label label-info">{{ student.phone_number }}</span>
                <span class="label label-primary">{{ student.mobile_number }}</span>
            </td>
            <td>
                {% if student.class_id %}
                    <a href="/{{ admin_prefix }}/ilearn/class/view/{{ student.class_id._id }}">
                        <span class="label label-primary">{{ student.class_id.name }}</span>
                    </a>
                {% else %}
                    <span class="label label-danger">Chưa có lớp</span>
                {% endif %}
            </td>
            <td>{{ student.created_at|dateFormat }}</td>
            <td>
                {% if student.status == 1 %}
                    <span class="label label-success">Đang học</span>
                    {% elif student.status == 0 %}
                    <span class="label label-warning">Chưa học</span>
                    {% elif student.status == 2 %}
                    <span class="label label-primary">Đã học xong</span>
                    {% elif student.status == -2 %}
                    <span class="label label-info">Đang học thử</span>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block jsExtends %}
    {{ super() }}
    <script>
        function deleteRecords() {
            var ids = [];
            $("input:checkbox[name='ids[]']:checked").each(function () {
                ids.push($(this).val());
            });
            if (ids.length > 0) {
                $.ajax({
                    url: `/{{ admin_prefix }}/ilearn/customers`,
                    type: 'DELETE',
                    data: {
                        ids: ids
                    },
                    success: function (result) {
                        window.location.href = `/{{ admin_prefix }}/ilearn/customers`;
                    }
                });
            }
        }
    </script>
{% endblock %}